{{> header}}
<div id="cinema">
    <h1>{{title}}</h1>
    <form action="#/movie/all" method="GET">
        <label>Search genre:</label>
        <input type="text" name="search">
        <input type="submit" value="Search">
    </form>
    <div class="movies">
        {{#each movies}}
            {{> movieBox}}
        {{/each}}
    </div>
</div>
{{> footer}}