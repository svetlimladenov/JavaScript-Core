{{> header}}
<div id="deleteMovie">
    <h1>Delete movie</h1>
    <form action="#/movies/delete" method="DELETE">
        <label>Title</label>
        <input type="text" name="title" value="{{title}}" disabled="">
        <label>Image Url</label>
        <input type="text" name="imageUrl"
            value="{{imageURL}}"
            disabled="">
        <label>Description</label>
        <textarea type="text" name="description"
            disabled="">{{description}}</textarea>
        <label>Genres</label>
        <input type="text" name="genres" value="{{genres}}" disabled="">
        <label>Available Tickets</label>
        <input type="number" name="tickets" value="{{tickets}}" disabled="">
        <input name="id" value="{{id}}" style="display:none">
        <input type="submit" value="Delete">
    </form>
</div>
{{> footer}}