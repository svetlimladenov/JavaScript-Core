{{> nav}}
<div class="user-profile">
    <img id="user-avatar-url" src="{{avatarUrl}}" alt="user-profile">
    <h1>{{username}}</h1>
    <h2>{{email}}</h2>

    {{#if isMyProfile}}
        <a id="deleteUserButton" href="#/users/delete/:{{userId}}">DELETE USER!</a>
    {{/if}}

    <p id="user-listings-title">User Memes</p>
    <div class="user-meme-listings">
        {{#each memes}}
        {{> meme}}
        {{else}}
        <p class="no-memes">No memes in database.</p>
        {{/each}}
    </div>
</div>
{{> footer}}